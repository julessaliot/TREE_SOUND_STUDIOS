<div class="navbar navbar-expand-sm navbar-light navbar-lewagon position-fixed w-100" style="z-index: 1">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.svg" %>
    <% end %>

  <div class="bar">

    <%= form_with url: search_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :location,
        params[:location],
        class: "form-control location",
        placeholder: "Where to?"
      %>
        <div class="check-in">
          <p>Check in</p>
          <input type="date" id="check-in" name="checkin sate" required>
          <input type="time" id="in-time" name="checkintime" required>
        </div>
        <div class="check-out">
          <p>Check out</p>
          <input type="date" id="check-out" name="checkin sate" required>
          <input type="time" id="out-time" name="checkintime" required>
      </div>

      <%= text_field_tag :max_occupancy,
        params[:max_occupancy],
        class: "form-control occupancy",
        placeholder: "Occupants"
      %>

      <%= submit_tag "Search", class: "btn btn-flat-show" %>
    <% end %>
  </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "List studios", studios_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
              <%= link_to "List a Studio", new_studio_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item2">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
